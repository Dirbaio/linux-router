*filter
:INPUT DROP [0:0]
:FORWARD DROP [0:0]
:OUTPUT ACCEPT [1119:49468]
:TCP - [0:0]
:UDP - [0:0]
:fw-firewall - [0:0]
:fw-interfaces - [0:0]
:fw-open - [0:0]
-A INPUT -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
-A INPUT -i lo -j ACCEPT
-A INPUT -m conntrack --ctstate INVALID -j DROP
-A INPUT -p icmp -m icmp --icmp-type 8 -m conntrack --ctstate NEW -j ACCEPT
-A INPUT -p udp -m conntrack --ctstate NEW -j UDP
-A INPUT -p tcp -m tcp --tcp-flags FIN,SYN,RST,ACK SYN -m conntrack --ctstate NEW -j TCP
-A INPUT -p udp -j REJECT --reject-with icmp-port-unreachable
-A INPUT -p tcp -j REJECT --reject-with tcp-reset
-A INPUT -j REJECT --reject-with icmp-proto-unreachable
-A FORWARD -p tcp --tcp-flags SYN,RST SYN -j TCPMSS --set-mss 1400
-A FORWARD -m conntrack --ctstate RELATED,ESTABLISHED -j ACCEPT
-A FORWARD -j fw-open
-A FORWARD -j fw-firewall
-A FORWARD -j fw-interfaces
-A FORWARD -j REJECT --reject-with icmp-host-unreachable
-A TCP -p tcp -m tcp --dport 22 -j ACCEPT
-A UDP -p udp -m udp --dport 53 -j ACCEPT
-A UDP -p udp -m udp --dport 67 -j ACCEPT
# -A fw-firewall -s 10.1.0.0/16 -d 10.0.0.0/16 -j DROP
# -A fw-firewall -s 10.1.0.0/16 -d 10.4.0.0/16 -j DROP
# -A fw-firewall -s 10.1.0.0/16 -d 10.99.0.0/16 -j DROP
# -A fw-firewall -s 10.0.0.0/16 -d 10.4.0.0/16 -j DROP
# -A fw-firewall -s 10.99.0.0/16 -d 10.4.0.0/16 -j DROP
!for network in config.networks
    !for host in network.hosts
        !for port in host.ports
            -A fw-open -d {{ host.ip }} -p {{ port.proto }} -m {{ port.proto }} --dport {{ port.dest }} -j ACCEPT
        !endfor
    !endfor
!endfor
!for network in config.networks
    !if network.nat
        -A fw-interfaces -i {{ network.interface }} ! -s {{ network.ip }}/{{ network.range }} -j LOGDROP
    !endif
    -A fw-open -s {{ network.ip }}/{{ network.range }} -d {{ network.ip }}/{{ network.range }} -j ACCEPT
!endfor
COMMIT
*nat
:PREROUTING ACCEPT [0:0]
:INPUT ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
:POSTROUTING ACCEPT [0:0]
:INCOMING - [0:0]
!for network in config.networks
    !if network.nat
        !for public_if in config.public_interfaces
            -A POSTROUTING -s {{ network.ip }}/{{ network.range }} -o {{ public_if }} -j MASQUERADE
        !endfor
        -A PREROUTING -d {{ config.public_ip }} -s {{ network.ip }}/{{ network.range }} -j INCOMING
    !endif
!endfor
!for public_if in config.public_interfaces
    -A PREROUTING -i {{ public_if }} -j INCOMING
!endfor
!for network in config.networks
    !for host in network.hosts
        !for port in host.ports
            -A INCOMING -p {{ port.proto }} -m {{ port.proto }} --dport {{ port.source }} -j DNAT --to-destination {{ host.ip }}:{{ port.dest }}
            -A POSTROUTING -d {{ host.ip }} -s {{ network.ip }}/{{ network.range }} -p {{ port.proto }} --dport {{ port.dest }} -j SNAT --to {{ network.ip }}
        !endfor
    !endfor
!endfor
COMMIT
